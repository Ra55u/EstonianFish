<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.WelcomePage"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid>
        <Label
            Text="Teretulemast Eesti kalade programmi!"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            FontSize="64"
            Margin="0,0,0,0"
            TextColor="{StaticResource NormalTextColor}"/>
        
        <Button
            Clicked="home_clicked"
            HeightRequest="100"
            WidthRequest="300"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Text="Sisenege"
            BackgroundColor="{StaticResource SecondaryBackgroundColor}"
            TextColor="{StaticResource NormalTextColor}"
            BorderColor="{StaticResource NormalTextColor}"
            FontSize="32"/>
        <Image
            Source="https://worldoftopia.com/wp-content/uploads/2022/05/Sheepshead-wrasse-1024x683.jpg"
            HeightRequest="300"
            WidthRequest="300"
            HorizontalOptions="Center"
            VerticalOptions="End"/>
    </Grid>
</ContentPage>